@model GerenciamentoConsultas.Models.CadastroExame

@{
    ViewBag.Title = "Editar Exame";
}

<h2>Editar Exame</h2>
<hr/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.HiddenFor(m => m.CadastroExameId)

    <div class="form-group">
        @Html.LabelFor(m => m.NomeExame, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NomeExame, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NomeExame, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Observacao, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Observacao, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Observacao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TipoExame.NmTipoExame, new { @class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.TipoExameid, new SelectList(ViewBag.TipoExames, "TipoExameId", "NmTipoExame"),
            "Selecione um tipo", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TipoExameid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Alterar" class="btn btn-success"/>
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger"})
        </div>
    </div>
</div>
}
