@model GerenciamentoConsultas.Models.CadastroExame

@{
    ViewBag.Title = "Detalhe";
}

<h2>Detalhes do Exame</h2>
<hr />
<div>
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => m.NomeExame, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NomeExame, new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Observacao, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Observacao, new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TipoExame.TipoExameId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.TipoExameid, ((String)ViewBag.TipoExames),
                           new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>

    </div>
</div>

