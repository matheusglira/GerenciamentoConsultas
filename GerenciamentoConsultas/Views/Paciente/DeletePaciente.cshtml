@model GerenciamentoConsultas.Models.Paciente

@{
    ViewBag.Title = "Excluir Paciente";
}

<h2>Excluir Paciente</h2>

<h3 class="text-danger">Deseja mesmo excluir o paciente?</h3>

<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(m => m.NomePaciente, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NomePaciente, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cpf, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Cpf, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DataNascimento, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DataNascimento, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Sexo, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButton("Sexo", "M") Homem
            @Html.RadioButton("Sexo", "F") Mulher
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Telefone, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deletar Produto" class="btn btn-danger" />
                @Html.ActionLink("Cancelar", "ListPacientes", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    }

</div>