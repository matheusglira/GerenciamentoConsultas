@model GerenciamentoConsultas.Models.PacienteViewModel

@{
    ViewBag.Title = "Novo Produto";
}

<h2>Novo Produto</h2>
<hr />

@using (Html.BeginForm("Create", "Paciente", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => m.NomePaciente, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NomePaciente,
                                   new { @class = "form-control", @placeholder = "Nome do Paciente" })
                @Html.ValidationMessageFor(m => m.NomePaciente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Cpf, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Cpf,
                                   new { @class = "form-control", @placeholder = "Cpf do Paciente", @id ="Cpf"})
                @Html.ValidationMessageFor(m => m.Cpf, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DataNascimento, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.DataNascimento,
                                   new { @class = "form-control", @placeholder = "Data de Nascimento" })
                @Html.ValidationMessageFor(m => m.DataNascimento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Sexo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.RadioButton("Sexo", "M") Homem
                @Html.RadioButton("Sexo", "F") Mulher
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Telefone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Telefone,
                                   new { @class = "form-control", @placeholder = "Telefone" })
                @Html.ValidationMessageFor(m => m.Telefone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email,
                                   new { @class = "form-control", @placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
                @Html.ActionLink("Cancelar", "ListPacientes", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>

}

<script>
 $(document).ready(function () {
     $('#Cpf').mask('999.999.999-99');
    });

</script>
