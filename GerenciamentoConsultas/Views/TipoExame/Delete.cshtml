@model GerenciamentoConsultas.Models.TipoExame

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h3>Deseja realmente deletar?</h3>

<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(m => m.NmTipoExame, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NmTipoExame, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Descricao, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deletar" class="btn btn-danger" />
                @Html.ActionLink("Cancelar", "List", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    }

</div>