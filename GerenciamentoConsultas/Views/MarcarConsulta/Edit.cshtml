@model GerenciamentoConsultas.Models.MarcarConsulta

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.HiddenFor(m => m.Protocolo)

    <div class="form-group">
        @Html.LabelFor(m => m.DataConsulta, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DataConsulta, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DataConsulta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Paciente.NomePaciente, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.PacienteId, new SelectList(ViewBag.Pacientes, "PacienteId", "NomePaciente"),
                                   "Paciente", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PacienteId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TipoExame.NmTipoExame, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.TipoExameId, new SelectList(ViewBag.TipoExames, "TipoExameId", "NmTipoExame"),
            "Selecione um tipo", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TipoExameId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar alterações" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}
