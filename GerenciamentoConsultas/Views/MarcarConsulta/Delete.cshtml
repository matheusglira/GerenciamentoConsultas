@model GerenciamentoConsultas.Models.MarcarConsulta

@{
    ViewBag.Title = "Delete";
}

<h2>Desmarcar Consulta</h2>

<h3 class="text-danger">Deseja Desmarcar ?</h3>
<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(m => m.DataConsulta, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DataConsulta, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Paciente.NomePaciente, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PacienteId, ((String)ViewBag.Pacientes), new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TipoExame.NmTipoExame, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TipoExameId, ((String)ViewBag.TipoExames),  new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deletar Produto" class="btn btn-danger" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    }
</div>